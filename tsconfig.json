{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",    
    "rootDir": "./src",      
    "module": "commonjs",    
    "target": "es6",
    "types": ["node", "jest"]         
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}
